pipeline {
    agent any
    tools {nodejs "node"}
    stages {
        stage('npm config') {
            steps {
                sh 'npm config ls'
            }
        }
        stage('Checkout'){
            steps{
                git branch: 'DevOps', url: 'https://github.com/Quintenschutyser/Cloud_API_Project.git'
            }
        }
        stage('Install dependencies'){
            steps {
                sh 'npm install'
            }
        }
        stage('Run ansible playbook'){
            steps{
                sh script: '''            
                pwd
                cd /DevOps/Examen/Jenkins/workspace/
                cd 'Examen with pipeline'
                pwd
                ansible-playbook FirstPB.yml
                '''
            }            
            // steps{
            //     echo "start dir: $(pwd)"
            //     sh 'sudo cd /DevOps/Examen/Jenkins/workspace/Examen with pipeline'
            //     sh 'sudo ansible-playbook FirstPB.yml'
            // }
        }
        /*stage('start'){
            steps{
                sh 'npm start'
            }
        }*/
    }
}